{
  "name": "contracts-exchange-v2",
  "version": "1.0.0",
  "description": "LooksRare exchange protocol smart contracts (v2)",
  "author": "LooksRare",
  "license": "MIT",
  "private": true,
  "keywords": [
    "looksrare",
    "solidity"
  ],
  "homepage": "https://looksrare.org/",
  "bugs": "https://github.com/LooksRare/contracts-exchange-v2/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/LooksRare/contracts-exchange-v2.git"
  },
  "files": [
    "/abis/*.json",
    "/contracts/**/*.sol",
    "/test/mock/MockRoyaltyFeeRegistry.sol"
  ],
  "scripts": {
    "compile:forge": "FOUNDRY_PROFILE=local forge build",
    "compile:hardhat": "hardhat compile --force",
    "generate:docs": "rm -f -R docs && hardhat docgen",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,sol,json,yaml,md}'",
    "format:write": "prettier --write '**/*.{js,jsx,ts,tsx,sol,json,yaml,md}'",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "prepare": "husky install",
    "test:forge:gas:coverage": "FOUNDRY_PROFILE=local forge test --gas-report",
    "test:forge": "FOUNDRY_PROFILE=local forge test -vv",
    "test:forge:coverage": "forge coverage --report lcov && LCOV_EXCLUDE=(\"test/*\" \"contracts/libraries/OpenZeppelin/*\") echo $LCOV_EXCLUDE | xargs lcov --output-file lcov-filtered.info --remove lcov.info genhtml lcov-filtered.info --output-directory out && open out/index.html",
    "test:forge:watch": "FOUNDRY_PROFILE=local forge test -vvv --watch",
    "test:hardhat": "hardhat test",
    "test:hardhat:gas": "REPORT_GAS=true hardhat test",
    "test:hardhat:coverage": "hardhat coverage && hardhat compile --force"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.4",
    "hardhat": "^2.9.4",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^7.0.4",
    "merkletreejs": "^0.2.31",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0",
    "release-it": "^15.0.0",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "^0.6.0-beta.34",
    "solmate": "^6.6.1",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.5.1",
    "@looksrare/contracts-libs": "2.5.1"
  }
}
