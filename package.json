{
  "name": "@looksrare/contracts-exchange-v2",
  "version": "0.1.2",
  "description": "LooksRare exchange protocol smart contracts (v2)",
  "author": "LooksRare",
  "license": "MIT",
  "keywords": [
    "ethereum",
    "looksrare",
    "solidity"
  ],
  "homepage": "https://looksrare.org/",
  "bugs": "https://github.com/LooksRare/contracts-exchange-v2/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/LooksRare/contracts-exchange-v2.git"
  },
  "files": [
    "/abis/*.json",
    "/contracts/*.sol",
    "/contracts/constants/*.sol",
    "/contracts/enums/*.sol",
    "/contracts/helpers/*.sol",
    "/contracts/interfaces/*.sol",
    "/contracts/libraries/*.sol",
    "/contracts/libraries/OpenZeppelin/*.sol",
    "/contracts/errors/SharedErrors.sol",
    "/contracts/executionStrategies/BaseStrategy.sol",
    "/contracts/executionStrategies/StrategyCollectionOffer.sol",
    "/test/mock/MockRoyaltyFeeRegistry.sol",
    "inheritance-contracts.svg"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "compile": "hardhat compile",
    "compile:forge": "FOUNDRY_PROFILE=local forge build",
    "compile:hardhat": "hardhat compile --force",
    "generate:docs": "rm -f -R docs && hardhat docgen",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,sol,json,yaml,md}'",
    "format:write": "prettier --write '**/*.{js,jsx,ts,tsx,sol,json,yaml,md}'",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "prepare": "husky install",
    "prepublishOnly": "yarn compile",
    "release": "hardhat export-abi && release-it",
    "test:forge:gas:coverage": "FOUNDRY_PROFILE=local forge test --gas-report",
    "test:forge": "FOUNDRY_PROFILE=local forge test -vv",
    "test:forge:coverage": "forge coverage --report lcov && LCOV_EXCLUDE=(\"test/*\" \"contracts/libraries/*\" \"contracts/helpers/ProtocolHelpers.sol\") echo $LCOV_EXCLUDE | xargs lcov --output-file lcov-filtered.info --remove lcov.info genhtml lcov-filtered.info --output-directory out && open out/index.html",
    "test:forge:watch": "FOUNDRY_PROFILE=local forge test -vvv --watch",
    "test:hardhat": "hardhat test",
    "test:hardhat:gas": "REPORT_GAS=true hardhat test",
    "test:hardhat:coverage": "hardhat coverage && hardhat compile --force"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethers": "^5.6.4",
    "hardhat": "^2.9.4",
    "hardhat-abi-exporter": "^2.9.0",
    "husky": "^7.0.4",
    "merkletreejs": "^0.2.31",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0",
    "release-it": "^15.6.0",
    "solhint": "^3.3.7",
    "solidity-docgen": "^0.6.0-beta.34",
    "solmate": "^6.6.1",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@chainlink/contracts": "0.5.1",
    "@looksrare/contracts-libs": "3.0.3"
  }
}
